{
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "rootDirs": ["./src","./tests"],
    "baseUrl": "./src",
    "paths": {
      "@adapters": ["adapters/index"],
      "@useCases": ["use-cases/index"],
      "@entities": ["entities/index"],
      "@infra": ["infra/index"],
      "@shared": ["shared/index"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "src/infra/config/git-ignored/**/*"
  ]
}
